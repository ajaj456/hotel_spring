<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.Booked">

	<!-- 예약 리스트 -->
	<select id="list" resultType="com.hotel.booked.model.Booking">
		select b.bno, b.roomNo, stayDate,
		a.id, to_char(stayDate, 'yyyy') as year, to_char(stayDate, 'mm')
		as
		month, to_char(stayDate, 'dd') as day from booked a, booking b order
		by bno desc
	</select>


	<!-- 예약 보기 -->
	<select id="view" resultType="com.hotel.booked.model.Booked">
	</select>

	<!-- 예약 하기 -->
	<insert id="write">

	</insert>

	<!-- 예약 수정 -->
	<update id="update">

	</update>

	<!-- 예약 삭제 -->
	<delete id="delete">

	</delete>

</mapper>