<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.Qna">

	<!-- 게시판리스트 -->
	<select id="list" resultType="com.hotel.qna.model.Qna">
		select no, title, wdate, id, hit from qna order by no desc
	</select>


	<!-- 게시판 글보기 -->
	<select id="view" resultType="com.hotel.qna.model.Qna">
		select no, title, content, id, wdate, hit from qna
		where no=#{no}
	</select>

	<!-- 게시판 글쓰기 -->
	<insert id="write">
		insert into qna(title, content)
		values(#{title},#{content})
	</insert>

	<!-- 게시판 글수정 -->
	<update id="update">
			update qna set
			title=#{title}, content=#{content}
	</update>

	<!-- 게시판글삭제 -->
	<delete id="delete">
		delete from qna where no=#{no}
	</delete>
	
<!-- 	게시판답변 -->
<delete id="reply">
		insert into qna(no, title, content)
		values(#{no},#{title},#{content})
	</delete>
</mapper>