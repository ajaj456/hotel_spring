<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.Board">

	<!-- 게시판리스트 -->
	<select id="list" resultType="com.hotel.board.model.Board">
		select no,title,content,hit,wdate,id from board
		order by no asc
	</select>


	<!-- 게시판 글보기 -->
	<select id="view" resultType="com.hotel.board.model.Board">
		select no,title,content,hit,wdate,id,grade from board
		
		where no=#{no}
	</select>

</mapper>